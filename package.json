{
	"name": "express-tdd",
	"version": "1.0.0",
	"description": "Express API using TDD",
	"main": "main.js",
	"scripts": {
		"start:dev": "cross-env NODE_ENV=development nodemon src/app/main.js",
		"start": "node src/app/main.js",
		"test": "jest --watch"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.15.11",
		"@types/sequelize": "^4.28.14",
		"cross-env": "^7.0.3",
		"eslint": "^8.37.0",
		"jest": "^29.5.0",
		"nodemailer-stub": "^1.2.2",
		"nodemon": "^2.0.22",
		"smtp-server": "^3.11.0",
		"supertest": "^6.3.3"
	},
	"dependencies": {
		"bcrypt": "^5.1.0",
		"body-parser": "^1.20.2",
		"config": "^3.3.9",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-validator": "^6.15.0",
		"i18next": "^22.4.14",
		"i18next-fs-backend": "^2.1.1",
		"i18next-http-middleware": "^3.3.0",
		"nodemailer": "^6.9.1",
		"sequelize": "^6.30.0",
		"sqlite3": "^5.1.6"
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 6
		},
		"extends": [
			"eslint:recommended"
		],
		"env": {
			"node": true,
			"es6": true,
			"jest": true
		},
		"rules": {
			"quotes": [
				"double",
				"error"
			],
			"semi": "error"
		}
	},
	"jest": {
		"verbose": true
	}
}
