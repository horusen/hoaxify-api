{
	"name": "express-tdd",
	"version": "1.0.0",
	"description": "Express API using TDD",
	"main": "main.js",
	"scripts": {
		"start": "nodemon src/app/main.js",
		"test": "jest --watch"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"eslint": "^8.37.0",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"supertest": "^6.3.3"
	},
	"dependencies": {
		"express": "^4.18.2"
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 6
		},
		"extends": [
			"eslint:recommended"
		],
		"env": {
			"node": true,
			"es6": true,
			"jest": true
		},
		"rules": {
			"quotes": [
				"double",
				"error"
			],
			"semi": "error"
		}
	}
}
